<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="413.0" prefWidth="502.0" spacing="8.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LendBookScreen">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Lend Book" textAlignment="CENTER">
         <font>
            <Font size="32.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <VBox prefHeight="0.0" prefWidth="442.0">
         <children>
            <Label text="Subscriber ID:">
               <VBox.margin>
                  <Insets bottom="5.0" right="5.0" top="5.0" />
               </VBox.margin></Label>
            <TextField fx:id="subID" />
            <Label text="Subscriber Is Frozen" textFill="RED">
               <VBox.margin>
                  <Insets right="5.0" top="5.0" />
               </VBox.margin></Label>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </VBox>
       <VBox prefHeight="0.0" prefWidth="442.0">
           <children>
               <Label text="Book ID:">
                   <VBox.margin>
                       <Insets bottom="5.0" right="5.0" />
                   </VBox.margin></Label>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                     <TextField fx:id="bookIdTextField" prefHeight="25.0" prefWidth="395.0" />
                  <Button mnemonicParsing="false" onAction="#activateScanner" prefHeight="25.0" prefWidth="74.0" text="Scan" />
               </children>
            </HBox>
               <Label text="No Book Copy Available" textFill="RED">
                   <VBox.margin>
                       <Insets bottom="5.0" right="5.0" top="5.0" />
                   </VBox.margin></Label>
           </children>
           <VBox.margin>
               <Insets />
           </VBox.margin>
       </VBox>
      <HBox alignment="CENTER_LEFT" prefHeight="0.0" prefWidth="442.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label text="Lending Date:" />
                  <DatePicker fx:id="lendDate" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </VBox>
             <VBox prefHeight="200.0" prefWidth="100.0">
                 <children>
                     <Label text="Lending Date:" />
                     <DatePicker fx:id="returnDate" />
                 </children>
             </VBox>
         </children>
      </HBox>
      <HBox prefHeight="0.0" prefWidth="442.0">
         <children>
            <Button mnemonicParsing="false" onAction="#submitLend" text="Lend Book">
               <font>
                  <Font size="14.0" />
               </font></Button>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets left="30.0" right="30.0" top="10.0" />
   </padding>
</VBox>

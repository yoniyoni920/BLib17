              <items>
                <MenuItem fx:id="infoMenuItem" mnemonicParsing="false" onAction="#openSubInfoScreen" text="Info" />
                <MenuItem fx:id="historyMenuItem" mnemonicParsing="false" onAction="#openSubscriberHistoryScreen" text="History" />

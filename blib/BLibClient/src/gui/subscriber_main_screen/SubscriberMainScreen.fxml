          <GridPane fx:id="borrowedBooksGrid" />
        </content>
      </ScrollPane>
      <Label fx:id="borrowedBooksCount" alignment="CENTER" contentDisplay="RIGHT" prefHeight="20.0" prefWidth="896.0" text="You have 0 books in your library" textAlignment="JUSTIFY" />

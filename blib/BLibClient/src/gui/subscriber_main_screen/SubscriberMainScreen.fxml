                        <Image url="@/resources/subscriber_main_screen_photos/search.png" />
                     </image>
               </graphic>
            </Button>
         </children>
      </AnchorPane>
      <ScrollPane fx:id="borrowedBooksScrollPane" fitToWidth="true" hbarPolicy="NEVER" prefHeight="551.0" prefWidth="831.0">

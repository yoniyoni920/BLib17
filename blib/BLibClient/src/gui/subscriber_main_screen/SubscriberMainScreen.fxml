<VBox spacing="16.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.subscriber_main_screen.SubscriberMainScreen">
   <children>
      <AnchorPane prefHeight="65.0" prefWidth="895.0" styleClass="underline">
